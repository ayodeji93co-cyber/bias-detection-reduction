import pandas as pd
from aif360.datasets import AdultDataset

def load_data():
    """
    Load the Adult dataset from AIF360.
    Returns a dataset object and a pandas DataFrame.
    """
    dataset = AdultDataset()
    df = pd.DataFrame(dataset.convert_to_dataframe()[0])
    return dataset, df

if __name__ == "__main__":
    dataset, df = load_data()
    print("Data Loaded. Shape:", df.shape)
    print(df.head())
